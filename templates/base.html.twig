        <title>{% block title %}BDE CESI Strasbourg{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="/assets/styleBase.css">
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <div class="banner">
