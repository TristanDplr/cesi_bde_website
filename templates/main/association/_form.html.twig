{{ form_start(form) }}
    <div id="formName" class="formRow">
        <p>Nom</p>
        {{ form_widget(form.name) }}
        {{ form_errors(form.name) }}
    </div>
    <div id="formDescription" class="formRow">
        <p>Description</p>
        {{ form_widget(form.description) }}
        {{ form_errors(form.description) }}
    </div>
    <div id="formImage" class="formRow">
        <p>Insérez un logo</p>
        <div id="dragDropArea" draggable="true"><p id="dragDropText">Glissez-déposez ici</p></div>
        {{ form_widget(form.image) }}
        {{ form_errors(form.image) }}
    </div>
    <button class="associationFormButton">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
