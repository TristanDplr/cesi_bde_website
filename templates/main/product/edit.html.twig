{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="/assets/main/shop/styleShop.css">
    <link rel="stylesheet" href="/assets/main/shop/styleShopForm.css">
{% endblock %}
{% block header %}
    <div id="banner">
        <div id="bannerText">
            <h1 id="mainTitle">Boutique</h1>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div id="pageContent">
        <h2 id="action">Modifier un produit</h2>

        {{ include('main/product/_form.html.twig', {'button_label': 'Update'}) }}

        <a href="{{ path('shop') }}">Retour</a>

        {{ include('main/product/_delete_form.html.twig') }}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/assets/main/product/shopForm.js"></script>
{% endblock %}
