{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/assets/security/styleSecurity.css">
    <link rel="stylesheet" href="/assets/security/styleRegistration.css">
{% endblock %}

{% block header %}
    <div id="banner">
        <div id="bannerText">
            <h1 id="mainTitle">Sécurité</h1>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div id="pageContent">
        <h2 id="action">Inscription</h2>
        {{ form_start(registrationForm) }}
            <div id="formFirstName" class="formRow">
                <p>Prénom</p>
                {{ form_widget(registrationForm.firstName) }}
                {{ form_errors(registrationForm.firstName) }}
            </div>
            <div id="formLastName" class="formRow">
                <p>Nom</p>
                {{ form_widget(registrationForm.lastName) }}
                {{ form_errors(registrationForm.lastName) }}
            </div>
            <div id="formImage" class="formRow">
                <p>Photo de Profil</p>
                <div id="dragDropArea" draggable="true"><p id="dragDropText">Glissez-déposez ici</p></div>
                {{ form_widget(registrationForm.image) }}
                {{ form_errors(registrationForm.image) }}
            </div>
            <div id="formEmail" class="formRow">
                <p>Email</p>
                {{ form_widget(registrationForm.email) }}
                {{ form_errors(registrationForm.email) }}
            </div>
            <div id="formPassword" class="formRow">
                <p>Mot de passe</p>
                {{ form_widget(registrationForm.password) }}
                {{ form_errors(registrationForm.password) }}
            </div>
            <div id="formPromotion" class="formRow">
                <p>Promotion</p>
                {{ form_widget(registrationForm.promotion) }}
                {{ form_errors(registrationForm.promotion) }}
            </div>
            <div id="formCampus" class="formRow">
                <p>Campus</p>
                {{ form_widget(registrationForm.campus) }}
                {{ form_errors(registrationForm.campus) }}
            </div>
            <div id="formGender" class="formRow">
                <p>Genre</p>
                {{ form_widget(registrationForm.genre) }}
                {{ form_errors(registrationForm.genre) }}
            </div>
            <div id="formAssociation" class="formRow">
                <p>Association</p>
                {{ form_widget(registrationForm.associations) }}
                {{ form_errors(registrationForm.associations) }}
            </div>
            <div id="terms" class="formRow">
                <input type="checkbox" id="termsCheckbox">
                <label for="horns">J'accepte les <a href="{{ path('legal') }}">conditions générales</a> du site.</label>
            </div>
            <div class="registrationFormButton" id="notChecked">S'inscrire</div>
            <button class="registrationFormButton" id="checked">{{ button_label|default('S\'inscrire') }}</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/assets/security/registration.js"></script>
{% endblock %}
